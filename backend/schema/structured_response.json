{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StructuredResponse",
  "type": "object",
  "properties": {
    "summary_points": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "text": {"type": "string"},
          "confidence": {"type": "string", "enum": ["high", "medium", "low"]}
        },
        "required": ["id", "text", "confidence"],
        "additionalProperties": false
      }
    },
    "detailed_explanation": {"type": "string"},
    "evidence": {
      "type": "array",
      "items": {"type": "string"}
    },
    "reproducible_example": {"type": "string"}
  },
  "required": ["summary_points", "detailed_explanation", "evidence", "reproducible_example"],
  "additionalProperties": false
}
